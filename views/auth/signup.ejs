<% layout('layout/boilerplate') -%>

<div class="border p-3 mx-auto w-50">
    <h1>Sign Up</h1>
    <form action="/register" method="post">
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username">
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" name="email" id="email">
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password">
        </div>
        <div class="mb-3">
            <p class="d-inline">Register as : &nbsp;</p>
            <span>
                <input class="form-check-input" type="radio" name="userType" id="retailer" value="retailer">
                <label class="form-check-label" for="retailer">Retailer</label> &nbsp;
                <input class="form-check-input" type="radio" name="userType" id="consumer" value="consumer" checked>
                <label class="form-check-label" for="consumer">Consumer</label>
            </span>
        </div>
        <p>Already have an Account ? <a href="/login">Login</a></p>
        <button type="submit" class="btn btn-sm btn-success">SignUp</button>
    </form>
</div